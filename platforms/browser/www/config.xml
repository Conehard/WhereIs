<?xml version='1.0' encoding='utf-8'?>
<widget id="com.whereisapp.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>WhereIs</name>
    <description>
        O Where Is? é um aplicativo para facilitar as pessoas a encontrarem locais em cidades desconhecidas.
    </description>
    <author email="andre@egendnetwork.com" href="http://egendnetwork.com">
        André Augusto
    </author>
    <content src="index.html" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <icon src="icon.png" />
    <access origin="*" />
    <access origin="http://egendnetwork.com" />
    <access origin="https://twitter.com" />
    <access origin="https://*.twitter.com" />
    <access origin="https://*.google.com.br" />
    <access origin="https://*.google.com" />
    <access origin="https://google.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait" />
</widget>
